@model IEnumerable<InternshipCompaniesManager.Models.Company>

@{
    ViewBag.Title = "Companies";
}



<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">@ViewBag.Title</h2>

        @* Прикажи Add New Company само ако е Admin *@
        @if (User.IsInRole("Admin"))
        {
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add New Company
            </a>
        }
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-4 g-3">
        <!-- General search by company name -->
        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-search"></i></span>
                <input type="text" id="searchInput" class="form-control" placeholder="Search companies...">
                <button class="btn btn-outline-secondary" type="button" id="clearSearch">Clear</button>
            </div>
        </div>

        <!-- Search by position -->
        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-briefcase"></i></span>
                <input type="text" id="positionSearch" class="form-control" placeholder="Search by position...">
            </div>
        </div>

        <!-- Sector filter -->
        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-filter"></i></span>
                <select class="form-select" id="sectorFilter">
                    <option value="">All Sectors</option>
                    @foreach (var sector in Model.Select(c => c.Sector).Distinct().OrderBy(s => s))
                    {
                        <option value="@sector">@sector</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <!-- Companies Container -->
    <div class="row g-4" id="companiesContainer">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 company-card"
                 data-name="@item.Name.ToLower()"
                 data-sector="@item.Sector"
                 data-position="@item.Position?.ToLower()">
                <div class="card h-100 border-0 shadow-hover">
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 180px;">
                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://via.placeholder.com/300x180?text=Company" : item.ImageUrl)"
                             class="img-fluid p-3" style="max-height: 100%; object-fit: contain;"
                             alt="@item.Name logo">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-truncate">@item.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Position</h6>
                        <div class="card-text">
                            <div class="d-flex mb-2">
                                <span class="badge bg-primary me-2">@item.Sector</span>
                                <span class="badge @(item.OpenPositions>0? "bg-success" : "bg-danger")"> @(item.OpenPositions) positions</span>
                            </div>
                            <p class="text-muted small mb-1">
                                <i class="fas fa-map-marker-alt me-2"></i> @item.Address
                            </p>
                            <p class="text-muted small mb-1">
                                <i class="fas fa-envelope me-2"></i> @item.Email
                            </p>
                            <p class="text-muted small">
                                <i class="fas fa-phone me-2"></i> @item.ContactPhone
                            </p>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between">
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-outline-info">
                            <i class="fas fa-info-circle me-1"></i>Details
                        </a>

                        @* Прикажи Edit и Delete копчињата само ако е Admin *@
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>

                            <a href="#" class="btn btn-sm btn-outline-danger delete-btn"
                               data-id="@item.Id"
                               data-name="@item.Name">
                                <i class="fas fa-trash-alt me-1"></i>Delete
                            </a>
                        }

                        @if (User.IsInRole("Student"))
                        {
                            if (item.OpenPositions > 0)
                            {
                                using (Html.BeginForm("Apply", "Applications", FormMethod.Post))
                                {
                                    @Html.Hidden("companyId", item.Id)
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-paper-plane me-1"></i> Аплицирај
                                    </button>
                                }
                            }
                            else
                            {
                                <div class="d-flex align-items-center text-danger">
                                   <i class="fas fa-times-circle me-2"></i>
                                   <span class="fw-bold">НЕМА СЛОБОДНИ МЕСТА</span>
                                </div>
                            }

                            
                        }


                    </div>
                </div>
            </div>
        }
    </div>

    <!-- No results message -->
    <div id="noResults" class="text-center py-5 d-none">
        <i class="fas fa-search fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No companies found matching your criteria</h4>
        <button class="btn btn-outline-primary mt-3" id="resetFilters">Reset all filters</button>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this company?</p>
                    <p class="fw-bold" id="companyName"></p>
                    <p class="text-danger"><i class="fas fa-exclamation-triangle me-2"></i>This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    @using (Html.BeginForm("Delete", "Companies", FormMethod.Post, new { id = "deleteForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" id="deleteCompanyId" value="" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .shadow-hover {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .shadow-hover:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            function filterCompanies() {
                const searchTerm = $('#searchInput').val().toLowerCase();
                const positionTerm = $('#positionSearch').val().toLowerCase();
                const sectorFilter = $('#sectorFilter').val();

                let visibleCount = 0;

                $('.company-card').each(function () {
                    const name = $(this).data('name');
                    const position = $(this).data('position') || '';
                    const sector = $(this).data('sector');

                    const nameMatch = name.includes(searchTerm);
                    const positionMatch = position.includes(positionTerm);
                    const sectorMatch = sectorFilter === '' || sector === sectorFilter;

                    if (nameMatch && positionMatch && sectorMatch) {
                        $(this).removeClass('d-none');
                        visibleCount++;
                    } else {
                        $(this).addClass('d-none');
                    }
                });

                $('#noResults').toggleClass('d-none', visibleCount > 0);
            }

            // Event listeners for all filters
            $('#searchInput, #positionSearch').on('keyup', filterCompanies);
            $('#sectorFilter').on('change', filterCompanies);

            $('#clearSearch').click(function () {
                $('#searchInput').val('');
                filterCompanies();
            });

            $('#resetFilters').click(function () {
                $('#searchInput').val('');
                $('#positionSearch').val('');
                $('#sectorFilter').val('');
                filterCompanies();
            });

            // Delete modal functionality
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            var companyIdToDelete = null;

            $('.delete-btn').click(function (e) {
                e.preventDefault();
                companyIdToDelete = $(this).data('id');
                var companyName = $(this).data('name');
                $('#companyName').text(companyName);
                $('#deleteCompanyId').val(companyIdToDelete);
                deleteModal.show();
            });

            $('#deleteForm').submit(function (e) {
                e.preventDefault();
                if (companyIdToDelete) {
                    this.submit();
                }
            });
        });
    </script>
}
