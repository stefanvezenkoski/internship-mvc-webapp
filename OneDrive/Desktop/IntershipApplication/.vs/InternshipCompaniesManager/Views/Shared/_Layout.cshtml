<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewBag.Title - Internship Companies Manager</title>

    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&family=Lora:wght@400;700&display=swap" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")





    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />

    <style>
        body {
            background-image: url('@Url.Content("~/cnv.png")');
            font-family: 'Open Sans', sans-serif;
        }
        footer {
            background: linear-gradient(45deg, #86BFC7, #DDE1E5);
            padding: 20px;
            text-align: center;
            color: #6c757d;
            font-size: 14px;
            margin-top: 40px;
            border-top: 1px solid #ddd;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Lora', serif;
        }


        @@keyframes b {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.2) rotate(5deg);
            }

            100% {
                transform: scale(1);
            }
        }

        #slika:hover {
            animation: b 0.5s ease-in;
        }

        #slika {
            padding-right: 8px;
            width: 60px;
            transition: all 0.3s ease;
        }

        .bg-dark {
            background: linear-gradient(45deg, #DDE1E5, #A5C2C9, #86BFC7);
        }

        .bg-light {
            background-color: #f8f9fa !important;
        }

        .border-bottom {
            border-bottom: 1px solid #dee2e6 !important;
        }

        .rounded-3 {
            border-radius: 0.5rem !important;
        }

        .feature {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 4rem;
            height: 4rem;
            font-size: 2rem;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container px-5">
            <img id="slika" src="~/logo1.png" alt="Logo" />
            @Html.ActionLink("Internship Companies Manager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">@Html.ActionLink("Почетна", "Index", "Home", null, new { @class = "nav-link" + (ViewContext.RouteData.Values["Action"].ToString() == "Index" ? " active" : "") })</li>
                    <li class="nav-item">@Html.ActionLink("Компании", "Index", "Companies", null, new { @class = "nav-link" })</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            @if (User.IsInRole("Student"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("MyApplications", "Applications")">Мои апликации</a>
                                </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("AllApplications", "Applications")">Сите апликации</a>
                                </li>
                            }
                        </ul>
                    }
                    <li class="nav-item">@Html.ActionLink("За нас", "About", "Home", null, new { @class = "nav-link" + (ViewContext.RouteData.Values["Action"].ToString() == "About" ? " active" : "") })</li>
                    <li class="nav-item">@Html.ActionLink("Контакт", "Contact", "Home", null, new { @class = "nav-link" + (ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? " active" : "") })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="py-5 bg-dark">
        <div class="container px-5">
            <p class="m-0 text-center text-white">
                <img src="~/logo1.png" style="width:80px;height:auto;" alt="Alternate Text" />
                <img src="https://courses.finki.ukim.mk/pluginfile.php/1/core_admin/logocompact/300x300/1672136478/moodle-io.png" style="width:100px;height:auto;" alt="Alternate Text" />
                   &copy; @DateTime.Now.Year - Internship Companies Manager | ФИНКИ 2025 - Развил: Стефан Везенкоски
            </p>
        </div>
    </footer>

    <script 
</body>
</h"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/scripts.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>