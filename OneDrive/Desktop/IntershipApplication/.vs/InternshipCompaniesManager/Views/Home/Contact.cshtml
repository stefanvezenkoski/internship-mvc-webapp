@{
    ViewBag.Title = "Контакт";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: 'Open Sans', sans-serif;
        color: #333;
        line-height: 1.6;
    }

    h1, h2, h3, h4, h5, h6 {
        font-family: 'Lora', serif;
        font-weight: 700;
    }

    .contact-section {
        padding: 80px 0;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 80vh;
    }

    .section-header {
        text-align: center;
        margin-bottom: 50px;
    }

        .section-header h2 {
            font-size: 2.5rem;
            margin-bottom: 15px;
            color: #2c3e50;
        }

            .section-header h2 span {
                color: #0D9DB8;
            }

        .section-header p {
            font-size: 1.2rem;
            color: #7f8c8d;
        }

    .contact-form {
        background: white;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 25px;
    }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 15px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

            .form-group input:focus,
            .form-group textarea:focus {
                border-color: #0D9DB8;
                outline: none;
                box-shadow: 0 0 0 3px rgba(74, 111, 165, 0.2);
            }

        .form-group textarea {
            min-height: 150px;
            resize: vertical;
        }

    .btn {
        background: linear-gradient(45deg, #86BFC7, #DDE1E5);
        color: white;
        border: none;
        padding: 15px 30px;
        border-radius: 50px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .btn i {
            margin-right: 10px;
        }

    .contact-info {
        margin-top: 50px;
        text-align: center;
    }

        .contact-info h3 {
            color: #2c3e50;
            margin-bottom: 20px;
        }

    .contact-details {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 30px;
    }

    .contact-item {
        display: flex;
        align-items: center;
        background: white;
        padding: 15px 25px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

        .contact-item i {
            font-size: 24px;
            color: #74C6CE;
            margin-right: 15px;
        }

    @@media (max-width: 768px) {
        .contact-form {
            padding: 25px;
        }

        .section-header h2 {
            font-size: 2rem;
        }

        .contact-details {
            flex-direction: column;
            align-items: center;
        }

        .contact-item {
            width: 100%;
            max-width: 300px;
        }
    }
</style>

<section id="contact" class="contact-section">
    <div class="container">
        <div class="section-header">
            <h2 style="background: #74C6CE; padding: 35px; color:white; ">Имаш прашање<span>?</span></h2>
            <p style="padding:20px;">
                Слободно оставете ни порака преку формата подолу.
                Нашиот тим на <span style="color: #0D9DB8;">Internship Companies Manager</span> ќе ви одговори во најкус можен рок.
</p>
        </div>

        <div class="contact-form">
            <form id="contactForm">
                <div class="form-group">
                    <input type="text" id="name" name="name" placeholder="Вашето име" required>
                </div>
                <div class="form-group">
                    <input type="email" id="email" name="email" placeholder="Вашата email адреса" required>
                </div>
                <div class="form-group">
                    <textarea id="message" name="message" placeholder="Вашата порака тука..." rows="5" required></textarea>
                </div>
                <button type="submit" class="btn">
                    <i class="fas fa-paper-plane"></i> Испрати порака
                </button>
            </form>
        </div>

        <div class="contact-info">
            <h3>Алтернативни начини на контакт</h3>
            <div class="contact-details">
                <div class="contact-item">
                    <i class="fas fa-envelope"></i>
                    <span>contact@icm.mk</span>
                </div>
                <div class="contact-item">
                    <i class="fas fa-phone"></i>
                    <span>+389 75 428 343</span>
                </div>
                <div class="contact-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>Ул. Македонска Борба бр. 17, 1000 Скопје</span>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/emailjs-com@3/dist/email.min.js"></script>
    <script>
        emailjs.init("uACwIgUdKctKAHk1K");

        function setupContactForm() {
            const contactForm = document.getElementById('contactForm');

            if (contactForm) {
                contactForm.addEventListener('submit', function (e) {
                    e.preventDefault();

                    const name = document.getElementById('name').value.trim();
                    const email = document.getElementById('email').value.trim();
                    const message = document.getElementById('message').value.trim();

                    // Валидација
                    if (!name || !email || !message) {
                        alert('Ве молам пополнете ги сите полиња.');
                        return;
                    }

                    // Генерирање на тековно време
                    const now = new Date();
                    const time = now.getFullYear() + '-' +
                        String(now.getMonth() + 1).padStart(2, '0') + '-' +
                        String(now.getDate()).padStart(2, '0') + ' ' +
                        String(now.getHours()).padStart(2, '0') + ':' +
                        String(now.getMinutes()).padStart(2, '0') + ':' +
                        String(now.getSeconds()).padStart(2, '0');

                    // Испрати до администратор
                    emailjs.send("service_1o217ia", "template_qjyly8q", {
                        from_name: name,
                        from_email: email,
                        message: message,
                        time: time
                    }).then(function (response) {
                        console.log("Известување испратено до администраторот.");
                    }, function (error) {
                        console.error("Грешка при праќање до администраторот:", error);
                    });

                    // Испрати авто-одговор до клиентот
                    emailjs.send("service_1o217ia", "template_fb7ajit", {
                        to_name: name,
                        to_email: email
                    }).then(function (response) {
                        alert('Пораката е успешно испратена! Ќе ве контактираме наскоро.');
                        contactForm.reset();
                    }, function (error) {
                        alert('Пораката е испратена, но имаше проблем со испраќање на потврда. ' + error);
                    });
                });
            }
        }

        // Иницијализација кога страницата е вчитана
        document.addEventListener("DOMContentLoaded", function () {
            setupContactForm();
        });
    </script>
}